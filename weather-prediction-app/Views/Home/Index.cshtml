<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather Prediction</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: url('/images/background.jpg'); 
            background-size: cover;
            background-position: center;
            color: #333;
        }

        header {
            text-align: center;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.8); 
            border-bottom: 1px solid #ddd;
        }

        main {
            display: flex;
            justify-content: center;
            align-items: flex-start; 
            height: 80vh; 
            padding-top: 50px; 
        }

        .container {
            background-color: rgba(255, 255, 255, 0.8); 
            border-radius: 20px; 
            padding: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1); 
        }

        .calculator {
            text-align: center;
        }

        .display {
            width: 200px;
            height: 40px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin: 20px auto;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }

        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #0056b3;
            }

        footer {
            text-align: center;
            background-color: rgba(255, 255, 255, 0.8);
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
            border-top: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <header>
        <h1>Weather Prediction</h1>
        <p>A simple weather forecasting tool</p>
    </header>
    <main>
        <div class="container">
            <div class="calculator">
                <div class="display" id="weatherDisplay">
                </div>
                <button onclick="fetchWeather()" id="fetchWeatherButton">Check</button>
            </div>
        </div>
    </main>
    <footer>
        <p>&copy; 2024 Your Company Name. All rights reserved.</p>
    </footer>

    <script>
        function fetchWeather() {
            fetch('http://localhost:5015/WeatherForecast')
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.length > 0) {
                        const temperature = data[0].temperatureC; 
                        document.getElementById('weatherDisplay').innerText = `Temperature: ${temperature} °C`;
                    } else {
                        document.getElementById('weatherDisplay').innerText = 'No weather data available';
                    }
                })
                .catch(error => {
                    console.error('Error fetching weather data:', error);
                    document.getElementById('weatherDisplay').innerText = 'Failed to fetch weather data';
                });
        }

    </script>
</body>
</html>
